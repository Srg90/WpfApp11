<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Path" x:Key="PathStyle1">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                    <GradientStop Color="#FF0E00B3" Offset="0"/>
                    <GradientStop Color="#FFFB0909" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="Black"/>
    </Style>

    <Style TargetType="Path" x:Key="PathStyle2">
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.0,5"
                                 StartPoint="1.4,5">
                    <GradientStop Color="#FF0E00B3" Offset="0"/>
                    <GradientStop Color="#FFFB0909" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Stroke" Value="Black"/>
    </Style>
</ResourceDictionary>